<%- include('../partials/head') %>

    <link href="/css/register.css" rel="stylesheet">
    <title>Formulario de registro</title>
    </head>

    <body>

        <%- include('../partials/header') %>
            <main>
                <div class="register-form">


                    <form method="POST" action='/user/register' autocomplete="off" style="min-height: 80vh">
                        <div class="bg-color">
                            <h5>Registro</h5>
                            <i class='bx bxs-user' style="color:white"></i> 
                            <input 
                                    placeholder="Ingrese su nombre"
									type="text" 
                            name="fullName" 
                            class="inputs <%= locals.errors && errors.fullName ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.fullName : null %>"
                        >
                        <% if (locals.errors && errors.fullName) { %>
                            <div class="text-danger">
                                <i class="fa-solid fa-circle-exclamation"></i>
                                <%= errors.fullName.msg %> 
                            </div>
                        <% } %>
                            
                            
                            


                            <i class='bx bxs-user' style="color:white"></i> <input 
                            placeholder="Ingrese su apellido"
                            type="text" 
                            name="surname" 
                            class="inputs <%= locals.errors && errors.surname ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.surname : null %>"
                        >
                        <% if (locals.errors && errors.surname) { %>
                            <div class="text-danger">
                                <i class="fa-solid fa-circle-exclamation"></i>
                                <%= errors.surname.msg %> 
                            </div>
                        <% } %>

                            <i class='bx bxs-envelope' style="color:white"></i>
                            <input 
                                    placeholder="Ingrese su email"
									type="text" 
									name="email" 
									class="inputs <%= locals.errors && errors.email ? 'is-invalid' : null %>"
									value="<%= locals.oldData ? oldData.email : null %>"
								>
								<% if (locals.errors && errors.email) { %>
									<div class="text-danger">
                                        <i class="fa-solid fa-circle-exclamation"></i>	<%= errors.email.msg %>
									</div>
								<% } %>

                            <i class='bx bxs-lock-open' style="color:white"></i>
                            <input 
                                    placeholder="Ingrese su contraseña"
									type="password" 
									name="password" 
									class="inputs <%= locals.errors && errors.password ? 'is-invalid' : null %>"
								>
								<% if (locals.errors && errors.password) { %>
									<div class="text-danger">
                                        <i class="fa-solid fa-circle-exclamation"></i>
										<%= errors.password.msg %>
									</div>
								<% } %>

                             <i class='bx bxs-lock-open' style="color:white"></i>
                            <input class="inputs" type="password" name="confirmPassword"
                                placeholder="Vuelva a ingresar su contraseña"> 
                                <% if (locals.errors && errors.confirmPassword) { %>
                                    <div class="text-danger">
                                        <i class="fa-solid fa-circle-exclamation"></i>
										<%= errors.confirmPassword.msg %>
									</div>
								<% } %>
                            
                                <a class='login-link' href="/user/login">Ya tengo una cuenta</a>
                            <div class="interaction-button">
                                <button type="submit">Enviar</button>
                            </div>
                        </div>
                </div>
                </form>


                <%- include('../partials/footer') %>