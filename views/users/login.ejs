<%- include('../partials/head') %>

    <link href="/css/login.css" rel="stylesheet">
    <title>Formulario de acceso</title>
    </head>

    <body>

        <%- include('../partials/header') %>
            <main>
                <div class="log-form">


                    <form method="POST" action='/user/login' autocomplete="off" style="min-height: 80vh">
                        <div class="bg-color">
                            <h5>Acceder</h5>
                            <i class='bx bxs-envelope' style="color:white"></i>
                            <input class="inputs" type="email" name="email" placeholder="Ingrese su email">
                            <% if (locals.errors && errors.email) { %>
                                <div class="text-danger">
                                    <%= errors.email.msg %>
                                </div>
                                <% } %>
                                    <i class='bx bxs-lock-open' style="color:white"></i>
                                    <input class="inputs" type="password" name="password"
                                        placeholder="Ingrese su contraseña">
                                        <div class="checkbox">

                                            <input type="checkbox" name="remember_user">
                                            <label for="remember_user" class="remember_user">Recordarme</label>
                                        </div>
                                    <div class="log-links">
                                        <a class='register-link' href="/user/register">Todavía no tengo una cuenta</a>
                                        <a class='forget-link' href="#">Olvidé mi contraseña</a>
                                        
                                        
                                    </div>
                                    <div class="interaction-button">
                                        <input type="submit"></input>
                                    </div>
                        </div>
                </div>
                </form>


                <%- include('../partials/footer') %>